{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "morpheus/ads",
  "version": "1.0.0",
  "title": "Morpheus Ads",
  "description": "Card de publicidade",
  "category": "morpheus",
  "icon": "money",
  "keywords": [
    "morpheus",
    "jornais",
    "ads",
    "anuncios",
    "publicidades",
    "horizontal",
    "vertical",
    "billboard",
    "arroba",
    "halfpage"
  ],
  "textdomain": "morpheus",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "styles": [
    { "name": "white", "label": "Branco", "isDefault": true },
    { "name": "gray", "label": "Cinza" }
  ],
  "supports": {
    "align": ["center", "full", "wide"],
    "anchor": true,
    "html": false,
    "spacing": {
      "margin": ["top", "bottom"],
      "padding": true
    }
  },
  "attributes": {
    "layout": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string",
      "default": "white"
    }
  }
}
